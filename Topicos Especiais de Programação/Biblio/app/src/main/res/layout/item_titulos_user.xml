<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="8dp"
    card_view:cardBackgroundColor="#ffffff">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/nome_titulo_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="nome titulo"
                android:textColor="#222"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/descricao_titulo_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:text=""
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:id="@+id/ano_lancamento_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Data Lancamento"
                android:textSize="12dp" />

            <Button
                android:backgroundTint="#112799"
                android:id="@+id/titulo_detalhe_user_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/magnify"
                android:textColor="#fff" />
        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>