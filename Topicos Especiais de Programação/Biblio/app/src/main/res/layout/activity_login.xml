<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4052b5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".app.LoginActivity">

    <Button
        android:id="@+id/login_register_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#112799"
        android:fontFamily="sans-serif-condensed"
        android:text="Ainda nÃ£o tem cadastro, clique aqui!"
        android:textColor="#fff"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/login_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="#fff"
        android:fontFamily="sans-serif-condensed"
        android:hint="Login"
        android:padding="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/login_senha_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:fontFamily="sans-serif-condensed"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/login_acessar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#112799"
        android:fontFamily="sans-serif-condensed"
        android:text="Acessar"
        android:textColor="#fff"
        android:textSize="18sp" />

</LinearLayout>