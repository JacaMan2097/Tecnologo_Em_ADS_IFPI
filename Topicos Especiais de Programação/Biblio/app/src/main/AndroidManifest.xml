<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.biblio.biblio">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".app.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.LoginActivity"
            android:parentActivityName=".app.MainActivity" />
        <activity
            android:name=".app.DrawerActivityUser"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".app.RegistrarUsuarioActivity"
            android:parentActivityName=".app.LoginActivity" />
        <activity
            android:name=".app.BiblioDrawerActivity"
            android:label="@string/title_activity_biblio_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>