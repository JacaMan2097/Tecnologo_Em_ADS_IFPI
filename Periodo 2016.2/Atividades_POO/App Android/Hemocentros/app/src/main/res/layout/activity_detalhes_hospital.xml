<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#F3E5F5"
        tools:context="hemocentros.com.example.kassio.hemocentros.hemocentros.activitys.DetalhesDoadoresActivity">
        <TextView
            android:background="@drawable/image_avatar"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#9C27B0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:textStyle="bold"
                android:text="Hospital: "
                android:textSize="@dimen/fontePadrao" />
            <TextView
                android:textColor="#9C27B0"
                android:layout_marginTop="20dp"
                android:id="@+id/text_view_unidade_detalhe_doadores_id"
                android:textSize="@dimen/fontePadrao"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:textSize="@dimen/fontePadrao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#9C27B0"
                android:text="Telefone: "
                android:layout_marginTop="20dp"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/fontePadrao"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#9C27B0"
                android:layout_marginTop="20dp"
                android:id="@+id/text_view_telefone_detalhe_doadores_id"
                android:layout_width="0dp"
                android:textSize="@dimen/fontePadrao"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>