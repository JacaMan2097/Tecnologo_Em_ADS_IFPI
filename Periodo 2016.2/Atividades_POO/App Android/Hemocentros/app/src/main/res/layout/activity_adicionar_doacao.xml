<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hemocentros.com.example.kassio.hemocentros.hemocentros.activitys.AdicionarDoacaoActivity">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:textSize="@dimen/fontePadrao"
            android:text="Doador:"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/fontePadrao"
            android:id="@+id/text_view_nome_doador_id"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <TextView
            android:textSize="@dimen/fontePadrao"
            android:text="Tipo de Sangue:"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:id="@+id/text_view_tipo_sangue_id"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/fontePadrao"
            android:text = ""
            android:id="@+id/text_view_tipo_de_sangue_id"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/text_view_texto_campanha"
            android:textSize="@dimen/fontePadrao"
            android:text="Campanha:"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/fontePadrao"
            android:text="Nao Selecionada"
            android:id="@+id/text_view_camapnha__id"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

<LinearLayout
    android:layout_marginTop="15dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="30dp">
    <TextView

        android:textSize="@dimen/fontePadrao"
        android:text="Bolsas de Sangue:"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tex_view_tipo_sague_campanha_id"
        android:layout_weight="2"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
    <Spinner
        android:textDirection="inherit"
        android:id="@+id/spinner_numero_de_bolsas_id"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"></Spinner>
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="Direcionar Doação:"
            android:textSize="@dimen/fontePadrao"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ToggleButton
            style="@style/Animation.AppCompat.DropDownUp"
            android:id="@+id/tooggle_button_direcionar_doacao_id"
            android:textSize="@dimen/fontePadrao"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/text_view_selecionar_hospitais_id"
            android:textSize="@dimen/fontePadrao"
            android:text="Hospital:"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/spinner_escolher_unidade_doacao_id"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="match_parent"></Spinner>
    </LinearLayout>
    <EditText
        android:id="@+id/edit_text_destino_doacao_id"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/fontePadrao"
        android:hint="Nome do Paciente de Destino"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    

</ScrollView>