<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        tools:context="hemocentros.com.example.kassio.hemocentros.hemocentros.activitys.CampanhasActivity">
        <EditText
            android:textSize="@dimen/fontePadrao"
            android:id="@+id/edit_text_descricao_campanha_id"
            android:hint="Descrição da Campanha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/fontePadrao"
                android:text="Qual tipo de Sangue da Campanha"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinner_tipo_sanquineo_campanha_id"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:textSize="@dimen/fontePadrao"
            android:text="Selecione a Duração da Campanha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <EditText
                android:hint="Dia"
                android:id="@+id/text_view_dia_id"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="/"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="Mes"
                android:id="@+id/tex_view_mes_id"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="/"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/text_view_ano_id"
                android:layout_weight="2"
                android:hint="Ano"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>

